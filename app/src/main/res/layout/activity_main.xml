                        android:padding="8dp"
                        android:text="@string/government_museum"
                        android:textColor="#000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/popularPlaceLocation8"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"

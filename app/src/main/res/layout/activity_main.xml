<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Greeting Text -->
    <TextView
        android:id="@+id/greetingTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/greetings"
        android:textSize="18sp"
        android:textColor="#000"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/search_bar_layout"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/search_bar_background"
        app:layout_constraintTop_toBottomOf="@id/greetingTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="@string/search_destination"
            android:paddingStart="16dp"
            android:paddingTop="0dp"
            android:paddingEnd="24dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#757575"
            android:textSize="16sp"
            android:background="@null" />

        <ImageView
            android:id="@+id/searchButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_arrow_forward"
            android:background="@drawable/search_button_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />
        <ImageView
            android:id="@+id/voiceSearchButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_mic"
            android:background="@drawable/search_button_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:contentDescription="Search by Voice" />
    </LinearLayout>




    <!-- Autocomplete Dropdown (RecyclerView) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/autocompleteRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Popular Places Title -->
    <TextView
        android:id="@+id/popularPlacesTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/popular"
        android:textSize="16sp"
        android:textColor="#000"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/autocompleteRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Popular Places Carousel -->
    <HorizontalScrollView
        android:id="@+id/popularPlacesCarouselScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/popularPlacesTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/popularPlacesCarousel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:id="@+id/BrahidheerwararTemple"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/popularPlaceImage"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/maruthamalai_2" />

                    <TextView
                        android:id="@+id/popularPlaceName"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:padding="8dp"
                        android:text="@string/maruthamalai_murugan_temple"
                        android:textColor="#000"
                        android:textSize="12sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/MeenakshiTemple"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/popularPlaceImage2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/isha1" />

                    <TextView
                        android:id="@+id/popularPlaceName2"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:padding="8dp"
                        android:text="@string/isha_yoga_centre"
                        android:textColor="#000"
                        android:textSize="12sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/Velligirihills"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/popularPlaceImage3"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/velliangiri1" />

                    <TextView
                        android:id="@+id/popularPlaceName3"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:padding="8dp"
                        android:text="@string/velliangiri_hills"
                        android:textColor="#000"
                        android:textSize="12sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/GassMuseum"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/popularPlaceImage4"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gassmus2" />

                    <TextView
                        android:id="@+id/popularPlaceName4"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:padding="8dp"
                        android:text="@string/gass_forest_museum"
                        android:textColor="#000"
                        android:textSize="12sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/MoneyFalls"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/popularPlaceImage5"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/monkeyfalls1" />

                    <TextView
                        android:id="@+id/popularPlaceName5"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:padding="8dp"
                        android:text="@string/kaviyaruvi_waterfalls"
                        android:textColor="#000"
                        android:textSize="12sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/GDmuseum"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/popularPlaceImage6"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gdmus1" />

                    <TextView
                        android:id="@+id/popularPlaceName6"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:padding="8dp"
                        android:text="@string/gedee_museum"
                        android:textColor="#000"
                        android:textSize="12sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/WildlifeSathi"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/popularPlaceImage7"
                        android:layout_width="match_parent"
                        android:layout_height="113dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wildlifesakthi4" />

                    <TextView
                        android:id="@+id/popularPlaceName7"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:padding="8dp"
                        android:text="@string/sathyamangalam_wildlife_sanctuary"
                        android:textColor="#000"
                        android:textSize="12sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/GovmentMuseum"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/popularPlaceImage8"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/govmus1" />

                    <TextView
                        android:id="@+id/popularPlaceName8"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:padding="8dp"
                        android:text="@string/government_museum"
                        android:textColor="#000"
                        android:textSize="12sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/Valparai"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/popularPlaceImage9"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/valparai1" />

                    <TextView
                        android:id="@+id/popularPlaceName9"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:padding="8dp"
                        android:text="@string/valparai"
                        android:textColor="#000"
                        android:textSize="12sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/PerurEeswaran"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/popularPlaceImage10"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/perurpateeswarartemple1" />

                    <TextView
                        android:id="@+id/popularPlaceName10"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:padding="8dp"
                        android:text="@string/perur_pateeswarar_temple"
                        android:textColor="#000"
                        android:textSize="12sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Search by Category Title -->
    <TextView
        android:id="@+id/searchByCategoryTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/search_by_category"
        android:textSize="16sp"
        android:textColor="#000"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/popularPlacesCarouselScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Category Buttons -->
    <HorizontalScrollView
        android:id="@+id/category_buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/searchByCategoryTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <Button
                android:id="@+id/categoryAllButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/category_button_selected"
                android:text="@string/all"
                android:textColor="#FFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/category5kmButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/category_button_background"
                android:text="@string/_5_km"
                android:textColor="#000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/category10kmButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/category_button_background"
                android:text="@string/_10_km"
                android:textColor="#000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/category15kmButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/category_button_background"
                android:text="@string/_15_km"
                android:textColor="#000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/category20kmButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_button_background"
                android:text="@string/_20_km"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- No Places Text View -->
    <TextView
        android:id="@+id/noPlacesTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/no_places_found_humorous"
        android:visibility="gone"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/category_buttons_layout"
        app:layout_constraintBottom_toTopOf="@id/placesRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Vertical Scrollable Card View for Places -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/placesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/category_buttons_layout"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:overScrollMode="never"
        android:padding="8dp" />

    <!-- Bottom Navigation View (Fixed at Bottom) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
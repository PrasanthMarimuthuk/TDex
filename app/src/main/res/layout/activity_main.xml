<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8">

    <TextView
        android:id="@+id/greetingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/greetings"
        android:textSize="18sp"
        android:textColor="#000"
        android:padding="16dp" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/search_bar_background">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="@string/search_destination"
            android:paddingStart="16dp"
            android:paddingTop="0dp"
            android:paddingEnd="24dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#757575"
            android:textSize="16sp"
            android:background="@null" />

        <ImageView
            android:id="@+id/searchButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_arrow_forward"
            android:background="@drawable/search_button_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>



    </LinearLayout>

    <TextView
        android:id="@+id/popularPlacesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/popular"
        android:textSize="16sp"
        android:textColor="#000"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        >

        <LinearLayout
            android:id="@+id/popularPlacesCarousel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/popularPlaceImage"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/brihadeeshwarar_temple" />
                    <TextView
                    android:id="@+id/popularPlaceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/brihadeeshwarar_temple"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:padding="8dp"/>

                    <TextView
                        android:id="@+id/popularPlaceLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tanjore_tamilnadu"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

             <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/popularPlaceImage2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/meenakshi_temple" />

                    <TextView
                    android:id="@+id/popularPlaceName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/meenakshi_temple"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:padding="8dp"/>

                    <TextView
                        android:id="@+id/popularPlaceLocation2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:text="@string/madurai_tamilnadu"
                        android:textColor="#757575"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

              <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/popularPlaceImage3"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mahabalipuram" /> <TextView
                    android:id="@+id/popularPlaceName3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mahabalipuram"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:padding="8dp"/>

                    <TextView
                        android:id="@+id/popularPlaceLocation3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mamallapuram_tamilnadu"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/popularPlaceImage4"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/vellore_fort" />
                    <TextView
                    android:id="@+id/popularPlaceName4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vellore_fort"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:padding="8dp"/>
                    <TextView
                        android:id="@+id/popularPlaceLocation4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/vellore_tamilnadu"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/searchByCategoryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_by_category"
        android:textSize="16sp"
        android:textColor="#000"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/categoryAllButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/category_button_selected"
            android:text="@string/all"
            android:textColor="#FFF"
            android:textSize="14sp" />

        <Button
            android:id="@+id/category5kmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/category_button_background"
            android:text="@string/_5_km"
            android:textColor="#000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/category10kmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/category_button_background"
            android:text="@string/_10_km"
            android:textColor="#000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/category15kmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/category_button_background"
            android:text="@string/_15_km"
            android:textColor="#000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/category20kmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/category_button_background"
            android:text="@string/_20_km"
            android:textColor="#000"
            android:textSize="14sp" />
    </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#E0E0E0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFF"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <Button
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textSize="14sp"
            android:textColor="#000"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_home_black_24dp"
            android:layout_marginEnd="32dp"
            style="?android:buttonBarButtonStyle"/>

        <Button
            android:id="@+id/option2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/visited"
            android:textSize="14sp"
            android:textColor="#000"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_history_black_24dp" android:layout_marginEnd="32dp"
            style="?android:buttonBarButtonStyle"/>

        <Button
            android:id="@+id/option3Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map"
            android:textSize="14sp"
            android:textColor="#000"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_location_on_black_24dp" android:layout_marginEnd="32dp"
            style="?android:buttonBarButtonStyle"/>

        <Button
            android:id="@+id/option4Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:textSize="14sp"
            android:textColor="#000"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_person_black_24dp" style="?android:buttonBarButtonStyle"/>
    </LinearLayout>

</LinearLayout>